{
  "buildCommand": "npm run vercel-build",
  "outputDirectory": "build/client",
  "devCommand": "npm run dev",
  "installCommand": "npm install && npx prisma generate",
  "functions": {
    "build/server/index.js": {
      "runtime": "nodejs20.x",
      "maxDuration": 30
    }
  },
  "routes": [
    {
      "src": "/build/(.*)",
      "dest": "/build/$1"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/build/server/index.js"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}